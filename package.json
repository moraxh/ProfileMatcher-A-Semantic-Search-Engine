  "dependencies": {
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-ejs-layouts": "^2.5.1",
    "nodemon": "^3.1.7",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.13"
  }
